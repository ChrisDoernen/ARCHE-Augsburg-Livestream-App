{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es5",
    "module": "esnext",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@liveo/entities": [
        "libs/entities/src/index.ts"
      ],
      "@liveo/l3as": [
        "libs/l3as"
      ],
      "@liveo/services": [
        "libs/services/src/index.ts"
      ],
      "@liveo/constants": [
        "libs/constants/src/index.ts"
      ],
      "@liveo/test-utilities": [
        "libs/test-utilities/src/index.ts"
      ]
    },
    "rootDir": "."
  },
  "exclude": [
    "node_modules",
    "tmp",
    "dist"
  ]
}